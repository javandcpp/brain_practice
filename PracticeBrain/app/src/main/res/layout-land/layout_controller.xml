<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:background="@drawable/titlebar_springing">


        <ImageButton
            android:layout_marginLeft="25dp"
            android:id="@+id/voiceable"
            android:src="@drawable/btn_audio_silent_selector"
            android:layout_width="25dp"
            android:background="@null"
            android:layout_gravity="center"
            android:layout_height="25dp" />

        <ImageButton
            android:id="@+id/musicable"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:layout_width="25dp"
            android:padding="5dp"
            android:src="@drawable/btn_voiceable_selector"
            android:background="@null"
            android:layout_height="25dp" />

        <ImageButton
            android:id="@+id/play"
            android:layout_margin="5dp"
            android:layout_width="25dp"
            android:layout_gravity="center"
            android:background="@null"
            android:src="@drawable/btn_music_play_selector"
            android:layout_height="25dp" />

        <ImageButton
            android:id="@+id/retry"
            android:layout_gravity="center"
            android:background="@null"
            android:layout_margin="5dp"
            android:layout_width="25dp"
            android:src="@drawable/titlebar_once_more"
            android:layout_height="25dp" />
        <ImageButton
            android:id="@+id/back"
            android:layout_gravity="center"
            android:background="@null"
            android:layout_margin="5dp"
            android:src="@drawable/titlebar_backtrack"
            android:layout_width="25dp"
            android:layout_height="25dp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/titlebar_more" />


</RelativeLayout>