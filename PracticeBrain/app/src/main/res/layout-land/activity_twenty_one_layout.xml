<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <com.yzk.brain.ui.EaseTitleBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleBarLeftImage="@drawable/titlebar_left_arrow"
        app:titleBarRightText="@string/practice_21_day_title_right_text"
        app:titleBarTitle="@string/home_1_text"></com.yzk.brain.ui.EaseTitleBar>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_one">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="160dp"
            android:layout_marginRight="120dp"
            android:layout_marginTop="60dp">

            <ImageView
                android:id="@+id/iv0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/home_on" />

            <RelativeLayout
                android:id="@+id/rl1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/iv0"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="1dp">

                <ImageView
                    android:id="@+id/iv1"
                    android:layout_width="wrap_content"
                    android:layout_height="85dp"
                    android:background="@drawable/home_left" />

                <ImageView
                    android:id="@+id/iv2"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_below="@id/iv1"
                    android:layout_marginTop="1dp"
                    android:background="@drawable/home_left" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/iv2"
                    android:layout_marginLeft="-5dp"
                    android:layout_marginRight="-2dp"
                    android:background="@drawable/home_xiamian" />

                <ImageButton
                    android:layout_width="51dp"
                    android:layout_height="52dp"
                    android:layout_marginTop="15dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="75dp"
                    android:layout_marginRight="55dp"
                    android:background="@drawable/normal_0" />
                <com.yzk.brain.ui.UnScrollGridView
                    android:id="@+id/gridview"
                    android:layout_width="match_parent"
                    android:layout_height="320dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="119dp"
                    android:columnWidth="40dp"
                    android:horizontalSpacing="1dp"
                    android:numColumns="8"
                    android:overScrollMode="never"
                    android:scrollbars="none"
                    android:stretchMode="columnWidth"
                    android:verticalSpacing="15dp" />


            </RelativeLayout>

        </RelativeLayout>

        <!--<LinearLayout-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_alignRight="@id/rl1"-->
        <!--android:layout_marginRight="-85dp"-->
        <!--android:layout_marginBottom="-50dp"-->
        <!--android:layout_alignBottom="@id/rl1"-->
        <!--android:background="@drawable/home_cheshi"-->
        <!--android:layout_height="150dp">-->




    </RelativeLayout>

</LinearLayout>